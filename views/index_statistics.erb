<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= config_data[:applications_title]%> <small><%= I18n.translate("portal.system-page.subheader") %></small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading dark-blue"><i class="fa fa-users fa-fw fa-3x"></i></div></a>
      <div class="circle-tile-content dark-blue">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.users") %></div>
        <div class="circle-tile-number text-faded "><%= users[:online]%></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>

  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading dark-blue"><i class="fa fa-fw fa-hand-pointer fa-3x"></i></div></a>
      <div class="circle-tile-content dark-blue">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.app-clicks") %> </div>
        <div class="circle-tile-number text-faded "><%= clicks %></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>

  <% color = temp.gsub("'C", '').to_f > 70.0 ? 'red' : 'green' %>
  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading <%= color %>"><i class="fa fa-thermometer fa-fw fa-3x"></i></div></a>
      <div class="circle-tile-content <%= color %>">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.temperature") %> </div>
        <div class="circle-tile-number text-faded "><%= temp %></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>

  <% color = cpu.gsub("%", '').to_f > 80.0 ? 'red' : 'green' %>
  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading <%= color %>"><i class="fa fa-microchip fa-fw fa-3x"></i></div></a>
      <div class="circle-tile-content <%= color %>">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.cpu") %> </div>
        <div class="circle-tile-number text-faded "><%= cpu %></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>

  <% color = ram.gsub("%", '').to_f > 80.0 ? 'red' : 'green' %>
  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading <%= color %>"><i class="fa fa-server fa-fw fa-3x"></i></div></a>
      <div class="circle-tile-content <%= color %>">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.ram") %> </div>
        <div class="circle-tile-number text-faded "><%= ram %></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>

  <% color = storage.gsub("%", '').to_f > 80.0 ? 'red' : 'green' %>
  <div class="col-lg-2 col-md-3 col-sm-4">
    <div class="circle-tile ">
      <a href="#"><div class="circle-tile-heading <%= color %>"><i class="fa fa-hdd fa-fw fa-3x"></i></div></a>
      <div class="circle-tile-content <%= color %>">
        <div class="circle-tile-description text-faded"> <%= I18n.translate("portal.system-page.storage") %> </div>
        <div class="circle-tile-number text-faded "><%= storage %></div>
        <a class="circle-tile-footer"><i class="fa fa-minus"></i></a>
      </div>
    </div>
  </div>
</div>
